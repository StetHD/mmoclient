package  {	import flash.display.BitmapData;	import flash.geom.Rectangle;	import flash.geom.Point;		public class Images 	{		public static var INSTANCE:Images = new Images();		private var tiles48:BitmapData = new Tiles48();			public function Images() : void		{		}				public function getImage(id:int) : BitmapData		{			var imageData:BitmapData = null;			imageData = new BitmapData(48, 48, true, 0);									var tileImageX:int = (id % 20) * 48;			var tileImageY:int = (id / 20);			tileImageY = tileImageY * 48;									var rect:Rectangle = new Rectangle(tileImageX, tileImageY, 48, 48);			var pt:Point = new Point(0, 0);			imageData.copyPixels(tiles48, rect, pt, null, new Point(), true);						return imageData;		}			}	}