package game{	import flash.display.BitmapData;	import game.entity.Improvement;	import stats.ItemBase;	import stats.ItemStats;	import game.entity.EntityManager;	import stats.ItemTemplate;	import stats.ItemRecipe;	public class Item 	{				public var id:int;		public var ownerType:int;		public var ownerId:int;		public var volume:int;		public var type:int;		public var template:int		public function Item() 		{		}				public function getName() : String		{			var itemBase:ItemBase = Stats.INSTANCE.getItemBase(type);						if(itemBase != null)			{				return itemBase.name;			}			else			{				var itemRecipe:ItemRecipe = Stats.INSTANCE.getItemRecipe(type);				return itemRecipe.itemName;			}						return null;		}				public function getCategory() : String		{			var itemBase:ItemBase = Stats.INSTANCE.getItemBase(type);						if(itemBase != null)			{				return itemBase.category;			}			else			{				var itemTemplate:ItemTemplate = Stats.INSTANCE.getItemTemplate(template);				trace(template);				return itemTemplate.itemCategory;			}		}				public function getImage() : BitmapData		{					var itemBase:ItemBase = Stats.INSTANCE.getItemBase(type);						if(itemBase != null)			{				return Images.INSTANCE.getImage(itemBase.image48);			}			else			{				return Images.INSTANCE.getImage(100);			}					}						public function getProductionCost() : int			{			var itemBase:ItemBase = Stats.INSTANCE.getItemBase(type);						if(itemBase != null)			{					return itemBase.productionCost;			}			else			{				var itemTemplate:ItemTemplate = Stats.INSTANCE.getItemTemplate(type);				return itemTemplate.productionCost;			}		}				public function getMaterialType() : int		{			var itemBase:ItemBase = Stats.INSTANCE.getItemBase(type);						if(itemBase != null)			{				return itemBase.materialType;			}			return null;		}				public function getMaterialAmount() : int		{			var itemBase:ItemBase = Stats.INSTANCE.getItemBase(type);			return itemBase.materialAmount;		}				public function getDescription() : String		{			var itemBase:ItemBase = Stats.INSTANCE.getItemBase(type);			var statsId:int;						if(itemBase != null)			{				statsId = type;				var itemStats:ItemStats = Stats.INSTANCE.getItemStats(statsId);								if(itemStats != null)				{					return itemStats.description;				}							}			else			{				var itemRecipe:ItemRecipe = Stats.INSTANCE.getItemRecipe(type);				return itemRecipe.flavourText;			}						return null;		}				/*public function getWeight() : Number		{			var itemBase:ItemBase = Stats.INSTANCE.getItemBase(type);			return itemStats.weight;		}*/	}	}