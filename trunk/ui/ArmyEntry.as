package ui {		import flash.display.MovieClip;	import fl.text.TLFTextField;	import flash.display.BitmapData;	import flash.display.Bitmap;	import flash.events.MouseEvent;			public class ArmyEntry extends MovieClip 	{		private static var REST:int = 0;		private static var ACTIVATE:int = 1;							public var armyId:int;		public var armyName:TLFTextField;		public var armySize:TLFTextField;		public var armyAction:TLFTextField;				private var iconState:int = REST;					public function ArmyEntry() 		{			addEventListener(MouseEvent.MOUSE_OUT, mouseOut);			addEventListener(MouseEvent.MOUSE_OVER, mouseOver);			addEventListener(MouseEvent.CLICK, mouseClick);					}				public function removeMouseEvents() : void		{			removeEventListener(MouseEvent.MOUSE_OUT, mouseOut);			removeEventListener(MouseEvent.MOUSE_OVER, mouseOver);		}						public function setImage(bitmapData:BitmapData) : void		{					var image:Bitmap = new Bitmap(bitmapData);			image.x = 1;			image.y = 1;						addChild(image);					}						public function showActivate() : void		{			iconState = ACTIVATE;			this.gotoAndStop("Activate");		}				public function hideActivate() : void		{			iconState = REST;			this.gotoAndStop("Rest");		}				private function mouseOut(e:MouseEvent) : void		{			if(iconState == REST)				this.gotoAndStop("Rest");			else				this.gotoAndStop("Activate");		}				private function mouseOver(e:MouseEvent) : void		{			this.gotoAndStop("MouseOver");		}				private function mouseClick(e:MouseEvent): void		{			this.gotoAndStop("MouseClick");		}			}	}